{
  "manifest_version": 2,
  "name": "MailPilot Cleanup Bot",
  "version": "1.1",
  "description": "Delete all unread promotional and lost & found emails in one click.",
  "permissions": [
    "identity",
    "storage",
    "https://gmail.googleapis.com/*",
    "https://www.googleapis.com/*",
    "https://accounts.google.com/*"
  ],
  "browser_action": {
    "default_title": "MailPilot Cleanup",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "mailpilot-cleanup@example.com"
    }
  }
}